{
  "name": "@itegoarcanadei/isaura",
  "version": "1.0.0",
  "description": "Isaura, a city that moves entirely upward.",
  "author": "Shah Kashani",
  "license": "MIT",
  "scripts": {
    "start": "node index.js",
    "clean": "rm -rf dist .parcel-cache",
    "build:public": "yarn parcel build src/html/public.html --no-source-maps --dist-dir dist/public",
    "build:private": "yarn parcel build src/html/private.html --no-source-maps --dist-dir dist/private",
    "build": "yarn clean && yarn build:public && yarn build:private",
    "watch:public": "yarn parcel watch src/html/public.html --port 6060 --dist-dir dist/public --watch-dir ../",
    "watch:private": "yarn parcel watch src/html/private.html --port 6061 --dist-dir dist/private --watch-dir ../",
    "watch:server": "yarn nodemon --watch index.js index.js",
    "dev": "yarn npm-run-all clean -p watch:public watch:private watch:server"
  },
  "dependencies": {
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.1.8"
  },
  "devDependencies": {
    "@parcel/transformer-react-refresh-wrap": "^2.11.0",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.11.0"
  }
}
